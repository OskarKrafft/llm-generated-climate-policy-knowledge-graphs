pol:EU_32013R0174_Title_0_Chapter_0_Section_0_Article_01 a pol:PolicyArticle ;
    pol:addresses <http://eurovoc.europa.eu/4060>,
        pol:Member_States ;
    pol:authorises <http://eurovoc.europa.eu/4038>,
        <http://eurovoc.europa.eu/4060>,
