@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

pol:32019R0631 a pol:PolicyDocument ;
    pol:hasArticle pol:EU_32019R0631_Title_0_Chapter_0_Section_0_Article_01 .

pol:EU_32019R0631_Title_0_Chapter_0_Section_0_Article_01 a pol:PolicyArticle ;
    rdfs:label "subject matter and objectives" ;
    pol:specifies_in_effect_time pol:EU_32019R0631_Article_01_TimeInEffect_2020,
                                 pol:EU_32019R0631_Article_01_TimeInEffect_2021,
                                 pol:EU_32019R0631_Article_01_TimeInEffect_2025,
                                 pol:EU_32019R0631_Article_01_TimeInEffect_2030,
                                 pol:EU_32019R0631_Article_01_TimeInEffect_2025_bench,
                                 pol:EU_32019R0631_Article_01_TimeInEffect_2030_bench ;
    pol:specifies_compliance_time pol:EU_32019R0631_Article_01_Deadline_2020,
                                 pol:EU_32019R0631_Article_01_Deadline_2024 .

pol:EU_32019R0631_Article_01_TimeInEffect_2020 a pol:Time_InEffect ;
    pol:In_effect_date "2020-01-01"^^xsd:date ;
    pol:annotatedText "from 1 january 2020, setting fleet-wide targets of 95 g CO2/km for new passenger cars and 147 g CO2/km for new light commercial vehicles, with measurement until 31 december 2020" .

pol:EU_32019R0631_Article_01_Deadline_2020 a pol:Time_Compliance ;
    pol:Compliance_date "2020-12-31"^^xsd:date ;
    pol:annotatedText "until 31 december 2020" .

pol:EU_32019R0631_Article_01_TimeInEffect_2021 a pol:Time_InEffect ;
    pol:In_effect_date "2021-01-01"^^xsd:date ;
    pol:annotatedText "from 1 january 2021, measurements for new passenger cars and new light commercial vehicles as specified" .

pol:EU_32019R0631_Article_01_Deadline_2024 a pol:Time_Compliance ;
    pol:Compliance_date "2024-12-31"^^xsd:date ;
    pol:annotatedText "until 31 december 2024, additional measures corresponding to a reduction of 10 g CO2/km" .

pol:EU_32019R0631_Article_01_TimeInEffect_2025 a pol:Time_InEffect ;
    pol:In_effect_date "2025-01-01"^^xsd:date ;
    pol:annotatedText "from 1 january 2025, fleet-wide targets: 15% reduction of the 2021 target for both new passenger cars and new light commercial vehicles" .

pol:EU_32019R0631_Article_01_TimeInEffect_2030 a pol:Time_InEffect ;
    pol:In_effect_date "2030-01-01"^^xsd:date ;
    pol:annotatedText "from 1 january 2030, fleet-wide targets: 37.5% reduction for new passenger cars and 31% reduction for new light commercial vehicles compared to the 2021 targets" .

pol:EU_32019R0631_Article_01_TimeInEffect_2025_bench a pol:Time_InEffect ;
    pol:In_effect_date "2025-01-01"^^xsd:date ;
    pol:annotatedText "from 1 january 2025, a zero- and low-emission vehicles' benchmark equal to a 15% share applies for both new passenger cars and new light commercial vehicles" .

pol:EU_32019R0631_Article_01_TimeInEffect_2030_bench a pol:Time_InEffect ;
    pol:In_effect_date "2030-01-01"^^xsd:date ;
    pol:annotatedText "from 1 january 2030, zero- and low-emission vehicles' benchmarks apply: 35% for new passenger cars and 30% for new light commercial vehicles" .
